---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';


// Import Angular Components
import ProductDescription from '../components/product-description/ProductDescription.jsx';
import PricingPackages from '../components/pricing-packages/PricingPackages.jsx';
import PricingAnimations from '../components/pricing-animations/PricingAnimations.jsx';
import HowItWorks from '../components/how-it-works/HowItWorks.jsx';
import Faqs from '../components/faqs/Faqs.jsx';
---

<Layout title="Fotolavoretti - Landing Page">
  <Header client:load />
  <main>
    <section class="hero">      
      <h1>Trasformo i lavoretti dei tuoi bambini in ricordi digitali che restano</h1>
      <p>PDF, galleria HD, video e animazioni: tutto raccolto in un ricordo ordinato, pronto da conservare e condividere.</p>
      <a href="#" class="cta-button">Richiedi il tu fotolavoretto</a>
    </section>

    <section id="product-description">
      <ProductDescription client:load />
    </section>

    <section id="pricing-packages">
      <PricingPackages client:load />
    </section>

    <section id="pricing-animations">
      <PricingAnimations client:load />
    </section>

    <section id="how-it-works">
      <HowItWorks client:load />
    </section>

    <section id="faqs">
      <Faqs client:load />
    </section>
  </main>
  <Footer client:load />
</Layout>

<style>
  main {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1rem;
  }

  .hero {
    text-align: center;
    padding: 5rem 1.5rem;
    background-color: transparent; /* Fondo transparente para un look más limpio */
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .hero-logo-container {
    margin-bottom: 3rem; /* Espacio entre el logo y el título */
  }

  .hero-logo {
    max-width: 350px; /* Ajusta el tamaño del logo */
    height: auto;
    display: block; /* Para centrar con margin auto */
    margin-left: auto;
    margin-right: auto;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    color: var(--color-text); /* Usar el color de texto principal */
  }

  .hero p {
    font-size: 1.4rem;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-secondary);
  }

  /* El estilo de .cta-button ya está en global.css, no es necesario repetirlo */

  section {
    padding: 3rem 1rem;
    border-bottom: none; /* Eliminar los bordes para un diseño más limpio */
  }

  /* Estilo especial para la primera sección después del hero */
  #product-description {
    padding-top: 0;
  }
</style>